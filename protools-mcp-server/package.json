{
  "name": "protools-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for controlling Pro Tools via PTSL",
  "type": "module",
  "bin": {
    "protools-mcp": "./dist/index.js",
    "protools-mcp-http": "./dist/http-server.js",
    "protools-test": "./dist/test-cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "dev:http": "tsx src/http-server.ts",
    "start:http": "node dist/http-server.js",
    "test-cli": "tsx src/test-cli.ts",
    "setup": "tsx src/setup.ts",
    "lint": "eslint src",
    "format": "prettier --write src"
  },
  "keywords": [
    "mcp",
    "protools",
    "ptsl",
    "daw",
    "audio",
    "ai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/protools-mcp-server"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.4",
    "@grpc/proto-loader": "^0.7.15",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
