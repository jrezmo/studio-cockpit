{
    "version": 6,
    "include": [
        "CMake/PTSLPresets.json"
    ],
    "configurePresets": [
        {
            "name": "ptsl-static",
            "hidden": true,
            "cacheVariables": {
                "PTSLC_CPP_BUILD_SHARED_LIBS": "OFF",
                "PTSLC_CPP_BUNDLE_STATIC_DEPENDENCIES": "ON"
            }
        },
        {
            "name": "ptsl-dir-Darwin-arm64",
            "hidden": true,
            "toolchainFile": "${sourceDir}/MacBuild/arm64/Dependencies/conan_toolchain.cmake",
            "binaryDir": "${sourceDir}/MacBuild/arm64",
            "installDir": "${sourceDir}/install/arm64",
            "cacheVariables": {
                "PTSLC_CPP_INSTALL_DEBUG_PREFIX": "${sourceDir}/install/arm64/Debug/PTSLC_CPP",
                "PTSLC_CPP_INSTALL_RELEASE_PREFIX": "${sourceDir}/install/arm64/Release/PTSLC_CPP"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "ptsl-dir-Darwin-x86_64",
            "hidden": true,
            "toolchainFile": "${sourceDir}/MacBuild/x86_64/Dependencies/conan_toolchain.cmake",
            "binaryDir": "${sourceDir}/MacBuild/x86_64",
            "installDir": "${sourceDir}/install/x86_64",
            "cacheVariables": {
                "PTSLC_CPP_INSTALL_DEBUG_PREFIX": "${sourceDir}/install/x86_64/Debug/PTSLC_CPP",
                "PTSLC_CPP_INSTALL_RELEASE_PREFIX": "${sourceDir}/install/x86_64/Release/PTSLC_CPP"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "ptsl-dir-Darwin-x86_64_arm64",
            "hidden": true,
            "toolchainFile": "${sourceDir}/MacBuild/x86_64_arm64/Dependencies/universal_toolchain.cmake",
            "binaryDir": "${sourceDir}/MacBuild/x86_64_arm64",
            "installDir": "${sourceDir}/install/x86_64_arm64",
            "cacheVariables": {
                "PTSLC_CPP_INSTALL_DEBUG_PREFIX": "${sourceDir}/install/x86_64_arm64/Debug/PTSLC_CPP",
                "PTSLC_CPP_INSTALL_RELEASE_PREFIX": "${sourceDir}/install/x86_64_arm64/Release/PTSLC_CPP"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "ptsl-dir-Windows-x86_64",
            "hidden": true,
            "toolchainFile": "${sourceDir}/WinBuild/x86_64/Dependencies/conan_toolchain.cmake",
            "binaryDir": "${sourceDir}/WinBuild/x86_64",
            "installDir": "${sourceDir}/install/x86_64",
            "cacheVariables": {
                "PTSLC_CPP_INSTALL_DEBUG_PREFIX": "${sourceDir}/install/x86_64/Debug/PTSLC_CPP",
                "PTSLC_CPP_INSTALL_RELEASE_PREFIX": "${sourceDir}/install/x86_64/Release/PTSLC_CPP"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ]
}